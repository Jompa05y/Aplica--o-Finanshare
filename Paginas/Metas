import React, { useState, useEffect } from "react";
import { Goal } from "@/entities/Goal";
import { Contribution } from "@/entities/Contribution";
import { Group } from "@/entities/Group";
import { User } from "@/entities/User";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { 
  Plus, 
  Target, 
  Calendar, 
  Users, 
  TrendingUp, 
  CheckCircle,
  ArrowLeft,
  Coins
} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Progress } from "@/components/ui/progress";
import { useToast } from "@/components/ui/use-toast";
import { format, differenceInDays } from "date-fns";
import { ptBR } from "date-fns/locale";

export default function Goals() {
  const [user, setUser] = useState(null);
  const [goals, setGoals] = useState([]);
  const [groups, setGroups] = useState([]);
  const [isLoading, setIsLoading] = useState(true);
  const { toast } = useToast();

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    setIsLoading(true);
    const userData = await User.me();
    setUser(userData);
    
    // Carregar metas do usuário
    const userGoals = await Goal.filter({ created_by: userData.email }, "-created_date");
    setGoals(userGoals);

    // Carregar grupos para metas de grupo
    const allGroups = await Group.list();
    const userGroups = allGroups.filter(g => 
      g.admin_email === userData.email || 
      g.members?.some(m => m.email === userData.email)
    );
    setGroups(userGroups);
    
    setIsLoading(false);
  };

  const getProgressPercentage = (goal) => {
    return Math.min((goal.current_amount / goal.target_amount) * 100, 100);
  };

  const getDaysRemaining = (deadline) => {
    if (!deadline) return null;
    const days = differenceInDays(new Date(deadline), new Date());
    return days;
  };

  const getStatusColor = (status) => {
    switch(status) {
      case 'completed': return 'bg-green-100 text-green-800';
      case 'cancelled': return 'bg-red-100 text-red-800';
      default: return 'bg-blue-100 text-blue-800';
    }
  };

  if (isLoading) {
    return (
      <div className="p-4 max-w-md mx-auto">
        <div className="animate-pulse space-y-4">
          <div className="h-8 bg-gray-200 rounded" />
          <div className="h-32 bg-gray-200 rounded" />
          <div className="h-48 bg-gray-200 rounded" />
        </div>
      </div>
    );
  }

  const activeGoals = goals.filter(g => g.status === 'active');
  const completedGoals = goals.filter(g => g.status === 'completed');
  const totalSaved = goals.reduce((sum, g) => sum + g.current_amount, 0);

  return (
    <div className="p-4 max-w-md mx-auto">
      {/* Header */}
      <div className="flex justify-between items-center mb-6">
        <div>
          <h1 className="text-2xl font-bold text-gray-800">Metas Financeiras</h1>
          <p className="text-gray-600">Planeje e alcance seus objetivos.</p>
        </div>
        <Link to={createPageUrl("CreateGoal")}>
          <Button className="bg-emerald-600 hover:bg-emerald-700 text-white">
            <Plus className="w-4 h-4 mr-2" />
            Nova Meta
          </Button>
        </Link>
      </div>

      {/* Stats Cards */}
      <div className="grid grid-cols-2 gap-4 mb-6">
        <Card className="bg-gradient-to-r from-emerald-500 to-green-500 text-white">
          <CardContent className="p-4">
            <div className="flex items-center gap-2 mb-2">
              <Coins className="w-5 h-5" />
              <span className="text-sm opacity-90">Total Poupado</span>
            </div>
            <div className="text-xl font-bold">
              R$ {totalSaved.toLocaleString('pt-BR')}
            </div>
          </CardContent>
        </Card>
        
        <Card className="bg-gradient-to-r from-blue-500 to-purple-500 text-white">
          <CardContent className="p-4">
            <div className="flex items-center gap-2 mb-2">
              <Target className="w-5 h-5" />
              <span className="text-sm opacity-90">Metas Ativas</span>
            </div>
            <div className="text-xl font-bold">
              {activeGoals.length}
            </div>
          </CardContent>
        </Card>
      </div>

      {/* Active Goals */}
      <div className="space-y-6">
        <Card>
          <CardHeader>
            <CardTitle>Metas Ativas ({activeGoals.length})</CardTitle>
          </CardHeader>
          <CardContent>
            {activeGoals.length > 0 ? (
              <div className="space-y-4">
                {activeGoals.map(goal => {
                  const progress = getProgressPercentage(goal);
                  const daysRemaining = getDaysRemaining(goal.deadline);
                  const isGroup = goal.type === 'group';
                  
                  return (
                    <div key={goal.id} className="p-4 border rounded-lg hover:shadow-sm transition-shadow">
                      <div className="flex justify-between items-start mb-3">
                        <div className="flex-1">
                          <h3 className="font-semibold text-gray-900">{goal.name}</h3>
                          <div className="flex items-center gap-2 mt-1 flex-wrap">
                            {isGroup && (
                              <Badge variant="outline" className="text-xs">
                                <Users className="w-3 h-3 mr-1" />
                                Grupo
                              </Badge>
                            )}
                            {goal.deadline && (
                              <Badge variant="outline" className={`text-xs ${
                                daysRemaining < 30 ? 'bg-orange-100 text-orange-800' : 'bg-gray-100 text-gray-800'
                              }`}>
                                <Calendar className="w-3 h-3 mr-1" />
                                {daysRemaining > 0 ? `${daysRemaining} dias` : 'Vencida'}
                              </Badge>
                            )}
                          </div>
                        </div>
                        <div className="text-right ml-2">
                          <p className="text-lg font-bold text-emerald-600">
                            {progress.toFixed(0)}%
                          </p>
                          <p className="text-xs text-gray-500">
                            R$ {goal.current_amount.toLocaleString('pt-BR')}
                          </p>
                          <p className="text-xs text-gray-400">
                            de R$ {goal.target_amount.toLocaleString('pt-BR')}
                          </p>
                        </div>
                      </div>
                      
                      <Progress value={progress} className="h-2 mb-3" />
                      
                      {goal.description && (
                        <p className="text-sm text-gray-600 mb-3">{goal.description}</p>
                      )}
                      
                      <div className="flex gap-2 flex-wrap">
                        <Link to={createPageUrl(`GoalDetail?id=${goal.id}`)} className="flex-1 min-w-[120px]">
                          <Button size="sm" variant="outline" className="w-full">
                            Ver Detalhes
                          </Button>
                        </Link>
                        <Link to={createPageUrl(`AddContribution?goalId=${goal.id}`)} className="flex-1 min-w-[120px]">
                          <Button size="sm" className="w-full bg-emerald-600 hover:bg-emerald-700 text-white">
                            <Plus className="w-3 h-3 mr-1" />
                            Contribuir
                          </Button>
                        </Link>
                      </div>
                    </div>
                  );
                })}
              </div>
            ) : (
              <div className="text-center py-8">
                <Target className="w-16 h-16 text-gray-300 mx-auto mb-4" />
                <h3 className="font-semibold text-gray-800 mb-2">Nenhuma meta ativa</h3>
                <p className="text-gray-600 text-sm mb-4">
                  Crie sua primeira meta financeira e comece a poupar
                </p>
                <Link to={createPageUrl("CreateGoal")}>
                  <Button size="sm" className="bg-emerald-600 hover:bg-emerald-700 text-white">
                    Criar Meta
                  </Button>
                </Link>
              </div>
            )}
          </CardContent>
        </Card>

        {/* Completed Goals */}
        {completedGoals.length > 0 && (
          <Card>
            <CardHeader>
              <CardTitle>Metas Concluídas ({completedGoals.length})</CardTitle>
            </CardHeader>
            <CardContent>
              <div className="space-y-2">
                {completedGoals.slice(0, 3).map(goal => (
                  <div key={goal.id} className="flex justify-between items-center p-2 bg-green-50 rounded-md">
                    <div className="flex items-center gap-2">
                      <CheckCircle className="w-4 h-4 text-green-600" />
                      <p className="font-medium text-green-800">{goal.name}</p>
                    </div>
                    <p className="font-bold text-green-600">R$ {goal.target_amount.toLocaleString('pt-BR')}</p>
                  </div>
                ))}
                {completedGoals.length > 3 && (
                  <p className="text-xs text-gray-500 text-center pt-2">
                    E mais {completedGoals.length - 3} metas concluídas
                  </p>
                )}
              </div>
            </CardContent>
          </Card>
        )}
      </div>
    </div>
  );
}