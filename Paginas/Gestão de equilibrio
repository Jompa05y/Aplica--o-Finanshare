import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { ArrowLeft, TrendingUp, TrendingDown, DollarSign, History, Plus, Minus } from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Badge } from "@/components/ui/badge";
import { useToast } from "@/components/ui/use-toast";
import { useNavigate } from "react-router-dom";
import { format } from "date-fns";
import { ptBR } from "date-fns/locale";
import BalanceCard from "@/components/BalanceCard";

export default function BalanceManagement() {
  const navigate = useNavigate();
  const { toast } = useToast();
  const [user, setUser] = useState(null);
  const [amount, setAmount] = useState("");
  const [description, setDescription] = useState("");
  const [operationType, setOperationType] = useState("add"); // "add" or "subtract"
  const [isLoading, setIsLoading] = useState(false);

  useEffect(() => {
    loadUser();
  }, []);

  const loadUser = async () => {
    const userData = await base44.auth.me();
    setUser(userData);
  };

  const handleUpdateBalance = async (e) => {
    e.preventDefault();
    if (!amount || parseFloat(amount) <= 0) {
      toast({
        title: "Valor inválido",
        description: "Digite um valor maior que zero.",
        variant: "destructive",
      });
      return;
    }

    setIsLoading(true);
    try {
      const amountValue = parseFloat(amount);
      const currentBalance = user.current_balance || 0;
      const newBalance = operationType === "add" 
        ? currentBalance + amountValue 
        : currentBalance - amountValue;

      // Criar registro no histórico
      const historyEntry = {
        date: new Date().toISOString(),
        amount: operationType === "add" ? amountValue : -amountValue,
        previous_balance: currentBalance,
        new_balance: newBalance,
        type: "manual",
        description: description || `Ajuste manual de ${operationType === "add" ? "adição" : "subtração"}`
      };

      const updatedHistory = [...(user.balance_history || []), historyEntry];

      await base44.auth.updateMe({
        current_balance: newBalance,
        balance_history: updatedHistory
      });

      toast({
        title: "✅ Saldo Atualizado!",
        description: `Seu saldo foi ${operationType === "add" ? "aumentado" : "reduzido"} em R$ ${amountValue.toLocaleString('pt-BR', { minimumFractionDigits: 2 })}`,
        className: "bg-green-100 text-green-800",
      });

      setAmount("");
      setDescription("");
      loadUser();
    } catch (error) {
      console.error("Erro ao atualizar saldo:", error);
      toast({
        title: "Erro",
        description: "Não foi possível atualizar o saldo. Tente novamente.",
        variant: "destructive",
      });
    }
    setIsLoading(false);
  };

  if (!user) {
    return (
      <div className="p-4 max-w-md mx-auto">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-emerald-500 mx-auto" />
      </div>
    );
  }

  const history = user.balance_history || [];
  const sortedHistory = [...history].sort((a, b) => new Date(b.date) - new Date(a.date));

  return (
    <div className="p-4 max-w-md mx-auto">
      {/* Header */}
      <div className="flex items-center gap-4 mb-6">
        <Button variant="ghost" size="icon" onClick={() => navigate(-1)}>
          <ArrowLeft className="w-5 h-5" />
        </Button>
        <div>
          <h1 className="text-xl font-bold text-gray-800">Gerenciar Saldo</h1>
          <p className="text-sm text-gray-600">Controle sua carteira virtual</p>
        </div>
      </div>

      {/* Balance Card */}
      <div className="mb-6">
        <BalanceCard user={user} onUpdate={loadUser} />
      </div>

      {/* Operation Type */}
      <div className="grid grid-cols-2 gap-3 mb-6">
        <Button
          variant={operationType === "add" ? "default" : "outline"}
          onClick={() => setOperationType("add")}
          className={operationType === "add" ? "bg-emerald-600 hover:bg-emerald-700 text-white" : ""}
        >
          <Plus className="w-4 h-4 mr-2" />
          Adicionar
        </Button>
        <Button
          variant={operationType === "subtract" ? "default" : "outline"}
          onClick={() => setOperationType("subtract")}
          className={operationType === "subtract" ? "bg-red-600 hover:bg-red-700 text-white" : ""}
        >
          <Minus className="w-4 h-4 mr-2" />
          Subtrair
        </Button>
      </div>

      {/* Form */}
      <Card className="mb-6">
        <CardHeader>
          <CardTitle className="text-lg">
            {operationType === "add" ? "Adicionar ao Saldo" : "Subtrair do Saldo"}
          </CardTitle>
        </CardHeader>
        <CardContent>
          <form onSubmit={handleUpdateBalance} className="space-y-4">
            <div>
              <Label htmlFor="amount">Valor (R$)</Label>
              <Input
                id="amount"
                type="number"
                step="0.01"
                placeholder="0,00"
                value={amount}
                onChange={(e) => setAmount(e.target.value)}
                required
                className="mt-1"
              />
            </div>
            <div>
              <Label htmlFor="description">Descrição (opcional)</Label>
              <Textarea
                id="description"
                placeholder="Ex: Salário recebido, Retirada para despesas..."
                value={description}
                onChange={(e) => setDescription(e.target.value)}
                className="mt-1"
                rows={3}
              />
            </div>
            <Button
              type="submit"
              disabled={isLoading || !amount}
              className={`w-full ${operationType === "add" ? "bg-emerald-600 hover:bg-emerald-700" : "bg-red-600 hover:bg-red-700"} text-white`}
            >
              {isLoading ? "Atualizando..." : `${operationType === "add" ? "Adicionar" : "Subtrair"} R$ ${parseFloat(amount || 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 })}`}
            </Button>
          </form>
        </CardContent>
      </Card>

      {/* History */}
      <Card>
        <CardHeader>
          <CardTitle className="text-lg flex items-center gap-2">
            <History className="w-5 h-5" />
            Histórico de Alterações
          </CardTitle>
        </CardHeader>
        <CardContent>
          {sortedHistory.length > 0 ? (
            <div className="space-y-3">
              {sortedHistory.slice(0, 20).map((entry, index) => (
                <div key={index} className="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                  <div className={`p-2 rounded-full ${entry.amount >= 0 ? 'bg-emerald-100' : 'bg-red-100'}`}>
                    {entry.amount >= 0 ? (
                      <TrendingUp className="w-4 h-4 text-emerald-600" />
                    ) : (
                      <TrendingDown className="w-4 h-4 text-red-600" />
                    )}
                  </div>
                  <div className="flex-1">
                    <div className="flex items-start justify-between gap-2">
                      <div>
                        <p className="font-medium text-sm">{entry.description}</p>
                        <p className="text-xs text-gray-500 mt-1">
                          {format(new Date(entry.date), "dd/MM/yyyy 'às' HH:mm", { locale: ptBR })}
                        </p>
                      </div>
                      <div className="text-right">
                        <p className={`font-bold ${entry.amount >= 0 ? 'text-emerald-600' : 'text-red-600'}`}>
                          {entry.amount >= 0 ? '+' : ''}R$ {Math.abs(entry.amount).toLocaleString('pt-BR', { minimumFractionDigits: 2 })}
                        </p>
                        <p className="text-xs text-gray-500">
                          Saldo: R$ {entry.new_balance.toLocaleString('pt-BR', { minimumFractionDigits: 2 })}
                        </p>
                      </div>
                    </div>
                    <Badge variant="outline" className="text-xs mt-2">
                      {entry.type === "manual" ? "Manual" : 
                       entry.type === "expense" ? "Despesa" : 
                       entry.type === "contribution" ? "Contribuição" : 
                       entry.type === "debt_payment" ? "Pagamento de Dívida" : "Ajuste"}
                    </Badge>
                  </div>
                </div>
              ))}
            </div>
          ) : (
            <div className="text-center py-8 text-gray-500">
              <History className="w-12 h-12 mx-auto mb-2 opacity-50" />
              <p className="text-sm">Nenhuma alteração registrada ainda</p>
            </div>
          )}
        </CardContent>
      </Card>
    </div>
  );
}