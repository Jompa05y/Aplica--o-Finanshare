import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { Expense } from "@/entities/Expense";
import { Group } from "@/entities/Group";
import { User } from "@/entities/User";
import { 
  Brain, 
  TrendingUp, 
  Users, 
  AlertTriangle, 
  Lightbulb,
  BarChart3,
  Clock,
  DollarSign,
  ArrowRight,
  Sparkles
} from "lucide-react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Progress } from "@/components/ui/progress";

export default function Insights() {
  const [user, setUser] = useState(null);
  const [insights, setInsights] = useState(null);
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    loadInsights();
  }, []);

  const loadInsights = async () => {
    setIsLoading(true);
    
    try {
      const userData = await User.me();
      setUser(userData);

      // Carregar dados para an√°lise
      const userExpenses = await Expense.filter({ created_by: userData.email }, "-date", 100);
      const allGroups = await Group.list();
      const userGroups = allGroups.filter(g => 
        g.admin_email === userData.email || 
        g.members?.some(m => m.email === userData.email)
      );

      // Preparar dados para a IA
      const expensesByCategory = {};
      const expensesByMonth = {};
      const groupExpenseSummary = [];

      userExpenses.forEach(expense => {
        // Por categoria
        if (!expensesByCategory[expense.category]) {
          expensesByCategory[expense.category] = { total: 0, count: 0 };
        }
        expensesByCategory[expense.category].total += expense.amount;
        expensesByCategory[expense.category].count += 1;

        // Por m√™s
        const month = new Date(expense.date).toISOString().substring(0, 7);
        if (!expensesByMonth[month]) {
          expensesByMonth[month] = 0;
        }
        expensesByMonth[month] += expense.amount;
      });

      // An√°lise de grupos
      for (const group of userGroups) {
        const groupExpenses = await Expense.filter({ group_id: group.id });
        const memberExpenses = {};
        
        groupExpenses.forEach(exp => {
          if (!memberExpenses[exp.paid_by]) {
            memberExpenses[exp.paid_by] = { paid: 0, count: 0 };
          }
          memberExpenses[exp.paid_by].paid += exp.amount;
          memberExpenses[exp.paid_by].count += 1;
        });

        groupExpenseSummary.push({
          groupName: group.name,
          totalExpenses: groupExpenses.reduce((sum, e) => sum + e.amount, 0),
          memberCount: (group.members?.length || 0) + 1,
          memberExpenses: memberExpenses
        });
      }

      // Chamar IA para an√°lise inteligente
      const aiAnalysis = await base44.integrations.Core.InvokeLLM({
        prompt: `Voc√™ √© um consultor financeiro inteligente analisando os dados de gastos de um usu√°rio.

**Dados do Usu√°rio:**
- Nome: ${userData.full_name}
- Total de despesas registradas: ${userExpenses.length}

**Gastos por Categoria:**
${JSON.stringify(expensesByCategory, null, 2)}

**Gastos por M√™s (√∫ltimos meses):**
${JSON.stringify(expensesByMonth, null, 2)}

**An√°lise de Grupos:**
${JSON.stringify(groupExpenseSummary, null, 2)}

Com base nesses dados, forne√ßa uma an√°lise financeira inteligente incluindo:

1. **Previs√£o de Gastos**: Estime quanto o usu√°rio provavelmente gastar√° no pr√≥ximo m√™s baseado nos padr√µes hist√≥ricos.

2. **Categoria Predominante**: Identifique em qual categoria o usu√°rio mais gasta e d√™ uma dica de como economizar.

3. **Comportamento em Grupos**: Se houver dados de grupos, analise o comportamento (quem paga mais, padr√µes de pagamento, etc).

4. **Alerta de Gastos**: Identifique se h√° algum padr√£o de gasto excessivo ou crescente que mere√ßa aten√ß√£o.

5. **Sugest√µes Pr√°ticas**: 3 sugest√µes concretas e personalizadas para melhorar a sa√∫de financeira.

Seja espec√≠fico, use os n√∫meros dos dados, e seja encorajador mas realista.`,
        response_json_schema: {
          type: "object",
          properties: {
            previsao_proximo_mes: {
              type: "object",
              properties: {
                valor_estimado: { type: "number" },
                confianca: { type: "string" },
                explicacao: { type: "string" }
              }
            },
            categoria_predominante: {
              type: "object",
              properties: {
                categoria: { type: "string" },
                percentual: { type: "number" },
                dica: { type: "string" }
              }
            },
            comportamento_grupos: {
              type: "object",
              properties: {
                analise: { type: "string" },
                destaque: { type: "string" }
              }
            },
            alerta: {
              type: "object",
              properties: {
                nivel: { type: "string" },
                mensagem: { type: "string" },
                recomendacao: { type: "string" }
              }
            },
            sugestoes: {
              type: "array",
              items: {
                type: "object",
                properties: {
                  titulo: { type: "string" },
                  descricao: { type: "string" },
                  impacto: { type: "string" }
                }
              }
            }
          }
        }
      });

      setInsights(aiAnalysis);
    } catch (error) {
      console.error("Erro ao carregar insights:", error);
    }

    setIsLoading(false);
  };

  if (isLoading) {
    return (
      <div className="p-4 max-w-md mx-auto">
        <div className="text-center py-16">
          <div className="inline-flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-4 animate-pulse">
            <Brain className="w-8 h-8 text-purple-600" />
          </div>
          <h2 className="text-xl font-bold text-gray-800 mb-2">Analisando seus dados...</h2>
          <p className="text-gray-600">A IA est√° processando seu hist√≥rico financeiro</p>
        </div>
      </div>
    );
  }

  if (!insights) {
    return (
      <div className="p-4 max-w-md mx-auto">
        <div className="text-center py-16">
          <AlertTriangle className="w-16 h-16 text-orange-500 mx-auto mb-4" />
          <h2 className="text-xl font-bold text-gray-800 mb-2">Dados Insuficientes</h2>
          <p className="text-gray-600">Adicione mais despesas para receber insights inteligentes</p>
        </div>
      </div>
    );
  }

  const alertColors = {
    baixo: "bg-green-100 text-green-800",
    medio: "bg-yellow-100 text-yellow-800",
    moderado: "bg-yellow-100 text-yellow-800",
    alto: "bg-red-100 text-red-800",
    critico: "bg-red-100 text-red-800"
  };

  return (
    <div className="p-4 max-w-md mx-auto pb-24">
      {/* Header */}
      <div className="mb-6">
        <div className="flex items-center gap-3 mb-2">
          <div className="w-10 h-10 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
            <Brain className="w-6 h-6 text-white" />
          </div>
          <div>
            <h1 className="text-2xl font-bold text-gray-800">Insights Inteligentes</h1>
            <p className="text-gray-600 text-sm">An√°lise com IA dos seus gastos</p>
          </div>
        </div>
      </div>

      <div className="space-y-4">
        {/* Previs√£o de Gastos */}
        <Card className="bg-gradient-to-r from-blue-500 to-cyan-500 text-white">
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <TrendingUp className="w-5 h-5" />
              Previs√£o para Pr√≥ximo M√™s
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="space-y-2">
              <div className="text-3xl font-bold">
                R$ {insights.previsao_proximo_mes.valor_estimado.toLocaleString('pt-BR')}
              </div>
              <Badge variant="secondary" className="bg-white/20 text-white">
                Confian√ßa: {insights.previsao_proximo_mes.confianca}
              </Badge>
              <p className="text-sm opacity-90 mt-2">
                {insights.previsao_proximo_mes.explicacao}
              </p>
            </div>
          </CardContent>
        </Card>

        {/* Categoria Predominante */}
        <Card>
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <BarChart3 className="w-5 h-5 text-purple-600" />
              Onde Voc√™ Mais Gasta
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="space-y-3">
              <div className="flex justify-between items-center">
                <span className="font-medium text-gray-900">
                  {insights.categoria_predominante.categoria}
                </span>
                <span className="text-2xl font-bold text-purple-600">
                  {insights.categoria_predominante.percentual}%
                </span>
              </div>
              <Progress value={insights.categoria_predominante.percentual} className="h-2" />
              <div className="p-3 bg-purple-50 rounded-lg">
                <div className="flex items-start gap-2">
                  <Lightbulb className="w-5 h-5 text-purple-600 mt-0.5" />
                  <div>
                    <p className="font-medium text-purple-900 text-sm">Dica de Economia</p>
                    <p className="text-purple-700 text-sm mt-1">
                      {insights.categoria_predominante.dica}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Comportamento em Grupos */}
        {insights.comportamento_grupos && insights.comportamento_grupos.analise && (
          <Card>
            <CardHeader>
              <CardTitle className="text-lg flex items-center gap-2">
                <Users className="w-5 h-5 text-blue-600" />
                An√°lise de Grupos
              </CardTitle>
            </CardHeader>
            <CardContent>
              <p className="text-gray-700 text-sm mb-3">
                {insights.comportamento_grupos.analise}
              </p>
              {insights.comportamento_grupos.destaque && (
                <div className="p-3 bg-blue-50 rounded-lg border border-blue-200">
                  <p className="text-blue-800 text-sm font-medium">
                    üí° {insights.comportamento_grupos.destaque}
                  </p>
                </div>
              )}
            </CardContent>
          </Card>
        )}

        {/* Alerta de Gastos */}
        <Card className="border-2" style={{ 
          borderColor: insights.alerta.nivel.toLowerCase() === 'alto' || insights.alerta.nivel.toLowerCase() === 'cr√≠tico' || insights.alerta.nivel.toLowerCase() === 'critico' ? '#EF4444' : 
                       insights.alerta.nivel.toLowerCase() === 'medio' || insights.alerta.nivel.toLowerCase() === 'moderado' || insights.alerta.nivel.toLowerCase() === 'm√©dio' ? '#F59E0B' : '#10B981'
        }}>
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <AlertTriangle className="w-5 h-5" />
              Alerta Financeiro
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="space-y-3">
              <Badge className={`${alertColors[insights.alerta.nivel.toLowerCase()] || alertColors['medio']} text-white`}>
                N√çVEL: {insights.alerta.nivel.toUpperCase()}
              </Badge>
              <p className="text-gray-700 font-medium">
                {insights.alerta.mensagem}
              </p>
              <div className="p-3 bg-gray-50 rounded-lg">
                <p className="text-sm text-gray-700">
                  <span className="font-medium">Recomenda√ß√£o:</span> {insights.alerta.recomendacao}
                </p>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Sugest√µes Pr√°ticas */}
        <Card className="bg-gradient-to-br from-emerald-50 to-teal-50">
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <Sparkles className="w-5 h-5 text-emerald-600" />
              Sugest√µes Personalizadas
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="space-y-3">
              {insights.sugestoes.map((sugestao, index) => (
                <div key={index} className="p-3 bg-white rounded-lg border border-emerald-200">
                  <div className="flex items-start gap-3">
                    <div className="w-6 h-6 bg-emerald-500 rounded-full flex items-center justify-center flex-shrink-0 text-white text-xs font-bold">
                      {index + 1}
                    </div>
                    <div className="flex-1">
                      <h4 className="font-semibold text-gray-900 text-sm mb-1">
                        {sugestao.titulo}
                      </h4>
                      <p className="text-gray-700 text-sm mb-2">
                        {sugestao.descricao}
                      </p>
                      <Badge variant="outline" className="text-xs bg-emerald-100 text-emerald-800 border-emerald-300">
                        Impacto: {sugestao.impacto}
                      </Badge>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </CardContent>
        </Card>

        {/* Bot√£o para Atualizar */}
        <Button 
          onClick={loadInsights}
          className="w-full bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white"
        >
          <Brain className="w-4 h-4 mr-2" />
          Atualizar An√°lise
        </Button>
      </div>
    </div>
  );
}