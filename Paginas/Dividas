import React, { useState, useEffect } from "react";
import { Debt } from "@/entities/Debt";
import { User } from "@/entities/User";
import { Group } from "@/entities/Group";
import { Expense } from "@/entities/Expense";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Plus, Landmark, Calendar, CheckCircle, Clock, Users, AlertCircle, Edit } from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { useToast } from "@/components/ui/use-toast";
import { format, isPast, differenceInDays } from "date-fns";
import { ptBR } from "date-fns/locale";

export default function Debts() {
  const [user, setUser] = useState(null);
  const [debts, setDebts] = useState([]);
  const [groupDebts, setGroupDebts] = useState([]);
  const [isLoading, setIsLoading] = useState(true);
  const { toast } = useToast();

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    setIsLoading(true);
    const userData = await User.me();
    setUser(userData);
    
    // Carregar dívidas manuais
    const userDebts = await Debt.filter({ created_by: userData.email }, "-due_date");
    setDebts(userDebts);

    // Carregar e calcular dívidas de grupo
    const allGroups = await Group.list();
    const userGroups = allGroups.filter(g => 
      g.admin_email === userData.email || 
      g.members?.some(m => m.email === userData.email)
    );
    
    const calculatedGroupDebts = [];
    for (const group of userGroups) {
      const groupExpenses = await Expense.filter({ group_id: group.id });
      if (groupExpenses.length === 0) continue;

      // Calcular balanço do grupo
      const balanceSheet = {};
      const allMemberEmails = [group.admin_email, ...(group.members || []).map(m => m.email)];
      
      // Inicializar balanço para todos os membros
      allMemberEmails.forEach(email => {
        balanceSheet[email] = { paid: 0, owed: 0, balance: 0 };
      });

      // Calcular valores pagos e devidos
      groupExpenses.forEach(expense => {
        // Valor pago pelo pagador
        if(balanceSheet[expense.paid_by]) {
          balanceSheet[expense.paid_by].paid += expense.amount;
        }

        // Valor devido por cada membro na divisão
        const splitBetween = expense.split_between && expense.split_between.length > 0 
          ? expense.split_between 
          : allMemberEmails;
        
        const sharePerPerson = expense.amount / splitBetween.length;
        
        splitBetween.forEach(email => {
          if(balanceSheet[email]) {
            balanceSheet[email].owed += sharePerPerson;
          }
        });
      });

      // Calcular balanço final
      Object.keys(balanceSheet).forEach(email => {
        balanceSheet[email].balance = balanceSheet[email].paid - balanceSheet[email].owed;
      });

      // Se o usuário tem balanço negativo (deve dinheiro), adicionar como dívida
      const userBalance = balanceSheet[userData.email];
      if (userBalance && userBalance.balance < -0.01) { // -0.01 para evitar problemas de ponto flutuante
        calculatedGroupDebts.push({
          id: `group-${group.id}`,
          title: `Dívida do grupo: ${group.name}`,
          amount: Math.abs(userBalance.balance),
          group: group,
          type: 'group_debt'
        });
      }
    }
    
    setGroupDebts(calculatedGroupDebts);
    setIsLoading(false);
  };

  const markAsPaid = async (debtId) => {
    try {
      await Debt.update(debtId, { status: 'paid' });
      toast({
        title: "Sucesso!",
        description: "Dívida marcada como paga!",
        className: "bg-green-100 text-green-800",
      });
      loadData();
    } catch (error) {
      toast({
        title: "Erro",
        description: "Não foi possível atualizar a dívida.",
        variant: "destructive",
      });
    }
  };

  const manualPendingDebts = debts.filter(d => d.status === 'pending');
  const allPendingDebts = [...manualPendingDebts, ...groupDebts];
  const paidDebts = debts.filter(d => d.status === 'paid');
  const totalPending = allPendingDebts.reduce((sum, d) => sum + d.amount, 0);

  const getDebtType = (type) => {
    switch(type) {
      case 'credit_card': return { label: 'Cartão', color: 'bg-blue-100 text-blue-800' };
      case 'loan': return { label: 'Empréstimo', color: 'bg-purple-100 text-purple-800' };
      case 'bill': return { label: 'Conta Fixa', color: 'bg-orange-100 text-orange-800' };
      default: return { label: 'Outro', color: 'bg-gray-100 text-gray-800' };
    }
  };

  return (
    <div className="p-4 max-w-md mx-auto">
      {/* Header */}
      <div className="flex justify-between items-center mb-6">
        <div>
          <h1 className="text-2xl font-bold text-gray-800">Minhas Dívidas</h1>
          <p className="text-gray-600">Controle seus débitos e vencimentos.</p>
        </div>
        <Link to={createPageUrl("AddDebt")}>
          <Button className="bg-pink-600 hover:bg-pink-700 text-white">
            <Plus className="w-4 h-4 mr-2" /> Nova Dívida
          </Button>
        </Link>
      </div>

      {/* Total Pending Card */}
      <Card className="mb-6 bg-gradient-to-r from-red-500 to-orange-500 text-white">
        <CardContent className="p-4">
          <p className="text-sm opacity-90">Total Pendente</p>
          <p className="text-3xl font-bold">R$ {totalPending.toLocaleString('pt-BR')}</p>
        </CardContent>
      </Card>

      <div className="space-y-6">
        {/* Pending Debts */}
        <Card>
          <CardHeader>
            <CardTitle>Dívidas Pendentes ({allPendingDebts.length})</CardTitle>
          </CardHeader>
          <CardContent>
            {allPendingDebts.length > 0 ? (
              <div className="space-y-3">
                {allPendingDebts.map(debt => {
                  if (debt.type === 'group_debt') {
                    // Group Debt Card
                    return (
                      <div key={debt.id} className="p-3 border border-dashed border-blue-400 bg-blue-50 rounded-lg">
                        <div className="flex justify-between items-start">
                          <div className="flex-1">
                            <p className="font-semibold text-blue-900">{debt.title}</p>
                            <Badge variant="outline" className="bg-blue-100 text-blue-800 flex items-center gap-1 w-fit mt-1">
                              <Users className="w-3 h-3"/> Dívida de Grupo
                            </Badge>
                          </div>
                          <div className="text-right">
                            <p className="font-bold text-lg text-blue-600">R$ {debt.amount.toLocaleString('pt-BR', {
                              minimumFractionDigits: 2,
                              maximumFractionDigits: 2
                            })}</p>
                            <Link to={createPageUrl(`GroupDetail?id=${debt.group.id}`)}>
                              <Button size="sm" variant="link" className="text-xs h-auto p-0 mt-1 text-blue-600">
                                Ver detalhes no grupo
                              </Button>
                            </Link>
                          </div>
                        </div>
                      </div>
                    );
                  }
                  
                  // Manual Debt Card
                  const dueDate = new Date(debt.due_date);
                  const daysUntilDue = differenceInDays(dueDate, new Date());
                  const isOverdue = daysUntilDue < 0;
                  const isDueSoon = daysUntilDue >= 0 && daysUntilDue <= 7;
                  const typeInfo = getDebtType(debt.type);
                  
                  let borderColor = "border-gray-200";
                  let bgColor = "bg-white";
                  if (isOverdue) {
                    borderColor = "border-red-400";
                    bgColor = "bg-red-50";
                  } else if (isDueSoon) {
                    borderColor = "border-orange-400";
                    bgColor = "bg-orange-50";
                  }

                  return (
                    <div key={debt.id} className={`p-3 border rounded-lg ${borderColor} ${bgColor}`}>
                      <div className="flex justify-between items-start">
                        <div>
                          <p className="font-semibold">{debt.title}</p>
                          <Badge variant="outline" className={typeInfo.color}>{typeInfo.label}</Badge>
                          <div className={`flex items-center gap-1 mt-1 text-sm ${isOverdue ? 'text-red-600 font-bold' : 'text-gray-500'}`}>
                              <Calendar className="w-4 h-4" /> Vence em: {format(dueDate, "dd/MM/yyyy", { locale: ptBR })}
                          </div>
                        </div>
                        <div className="text-right flex items-start gap-1">
                          <div>
                            <p className="font-bold text-lg">R$ {debt.amount.toLocaleString('pt-BR')}</p>
                             <Button size="sm" variant="outline" onClick={() => markAsPaid(debt.id)} className="mt-1 text-xs">
                               <CheckCircle className="w-3 h-3 mr-1"/> Marcar como Pago
                             </Button>
                          </div>
                          <Link to={createPageUrl(`AddDebt?id=${debt.id}`)}>
                            <Button variant="ghost" size="icon" className="h-8 w-8">
                               <Edit className="w-4 h-4 text-gray-500"/>
                            </Button>
                          </Link>
                        </div>
                      </div>
                      {(isOverdue || isDueSoon) && (
                        <div className={`mt-2 flex items-center gap-1 text-xs ${isOverdue ? 'text-red-600' : 'text-orange-600'}`}>
                           <AlertCircle className="w-3 h-3"/>
                           {isOverdue ? `Atrasado há ${Math.abs(daysUntilDue)} dia(s)` : `Vence em ${daysUntilDue} dia(s)`}
                        </div>
                      )}
                    </div>
                  );
                })}
              </div>
            ) : (
              <p className="text-center text-gray-500 py-4">Nenhuma dívida pendente. Ótimo trabalho!</p>
            )}
          </CardContent>
        </Card>
        
        {/* Paid Debts */}
        <Card>
          <CardHeader>
            <CardTitle>Dívidas Pagas ({paidDebts.length})</CardTitle>
          </CardHeader>
          <CardContent>
            {paidDebts.length > 0 ? (
              <div className="space-y-2 opacity-60">
                {paidDebts.slice(0, 3).map(debt => (
                  <div key={debt.id} className="flex justify-between items-center p-2 bg-gray-50 rounded-md">
                    <p className="font-medium line-through">{debt.title}</p>
                    <p className="font-bold text-gray-500">R$ {debt.amount.toLocaleString('pt-BR')}</p>
                  </div>
                ))}
              </div>
            ) : (
              <p className="text-center text-gray-500 py-4">Nenhuma dívida paga ainda.</p>
            )}
          </CardContent>
        </Card>
      </div>
    </div>
  );
}